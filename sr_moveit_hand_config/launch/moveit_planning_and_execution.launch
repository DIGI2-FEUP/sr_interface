<launch>
  <arg name="planning" default="ompl"/>
  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false"/>
  <arg name="load_robot_description" default="true"/>
  <arg name="gui" default="true"/>
  
  <!-- If needed, broadcast static tf for robot root -->
  <node pkg="tf" type="static_transform_publisher" name="virtual_joint_broadcaster_0" args="0 0 0 0 0 0 shadow_world_frame rh_forearm 100" />
  
  <include file="$(find sr_moveit_hand_config)/launch/planning_context.launch" />
  
  <node pkg="sr_moveit_hand_config" type="timed_roslaunch.sh" args="2 sr_moveit_hand_config move_group.launch allow_trajectory_execution:=true fake_execution:=false info:=true debug:=$(arg debug) publish_monitored_planning_scene:=true pipeline:=$(arg planning)" name="timed_roslaunch" output="screen"/>
  
  <!--include file="$(find sr_moveit_hand_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="false"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="publish_monitored_planning_scene" value="true"/>
    <arg name="pipeline" value="$(arg planning)"/>
  </include-->

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <group if="$(arg gui)">
    <include file="$(find sr_moveit_hand_config)/launch/moveit_rviz.launch">
      <arg name="config" value="true"/>
      <arg name="debug" value="$(arg debug)"/>
    </include>
  </group>
</launch>
